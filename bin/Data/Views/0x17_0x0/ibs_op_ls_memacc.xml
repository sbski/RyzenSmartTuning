<?xml version="1.0"?>
<!--
    IBS load/store op "expert" information: Bank conflicts, forwarding, MAB hits view configuration.

    Related DC configurations: ibs.xml

    Family : 17h
    Model  : 00h-0Fh
    Flavor : Public
    Copyright (c) 2018-2019 Advanced Micro Devices, Inc.
-->
<view_configuration>
    <view name="IBS MEM locked ops and access by type" separate_cpus="F" separate_processes="F" separate_threads="F">
        <data>
            <event id="OpLoadStore" select="F200" mask="00"/>
            <event id="OpLoad" select="F201" mask="00"/>
            <event id="OpStore" select="F202" mask="00"/>
            <event id="OpUCMemAcc" select="F20D" mask="00"/>
            <event id="OpWCMemAcc" select="F20E" mask="00"/>
            <event id="OpLocked" select="F20F" mask="00"/>
        </data>
        <output>
            <column title="IBS load/store" sort="descending">
                <value id="OpLoadStore"/>
            </column>
            <column title="IBS load" sort="none">
                <value id="OpLoad"/>
            </column>
            <column title="IBS store" sort="none">
                <value id="OpStore"/>
            </column>
            <column title="IBS UC mem acc" sort="none">
                <value id="OpUCMemAcc"/>
            </column>
            <column title="IBS WC mem acc" sort="none">
                <value id="OpWCMemAcc"/>
            </column>
            <column title="IBS locked op" sort="none">
                <value id="OpLocked"/>
            </column>
        </output>
        <tool_tip>Show UC/WC memory access and locked ops</tool_tip>
        <description>Use this view to show uncacheable (UC) memory access, write combining (WC) memory access and locked load/store operations.</description>
    </view>
</view_configuration>

<?xml version="1.0"?>
<!--
    Show data translation lookaside buffer (DTLB) measurements view configuration.

    The dtlb_focus view should be available when data cache accesses,
    DTLB_L1M_L2H, DTLB_L1M_L2M, and retired instructions are available.

    Related DC configurations: data_access.xml

    Family : 17h
    Model  : 00h-0Fh
    Flavor : Public
    Copyright (c) 2018-2019 Advanced Micro Devices, Inc.
-->
<view_configuration>
    <view name="DTLB report" separate_cpus="F" separate_processes="F" separate_threads="F">
        <data>
            <event id="CPU_clocks" select="76" mask="00"/>
            <event id="Ret_instructions" select="C0" mask="00"/>
            <event id="DC_accesses" select="29" mask="07"/>
            <event id="DTLB_L1M" select="45" mask="FF"/>
        </data>
        <output>
            <column title="Ret inst" sort="descending">
                <value id="Ret_instructions"/>
            </column>
            <column title="DTLB requests" sort="none">
                <value id="DC_accesses"/>
            </column>
            <column title="DTLB L1M" sort="none">
                <value id="DTLB_L1M"/>
            </column>
            <column title="DTLB request rate" sort="none">
                <ratio left="DC_accesses" right="Ret_instructions"/>
            </column>
            <column title="DTLB L1M rate" sort="none">
                <ratio left="DTLB_L1M" right="Ret_instructions"/>
            </column>
            <column title="CPU clocks" sort="none">
                <value id="CPU_clocks"/>
            </column>
            <column title="IPC" sort="descending">
                <ratio left="Ret_instructions" right="CPU_clocks"/>
            </column>
            <column title="CPI" sort="none">
                <ratio left="CPU_clocks" right="Ret_instructions"/>
            </column>
        </output>
        <tool_tip>Show detailed data DTLB measurements</tool_tip>
        <description>Use this view to break out data translation lookaside buffer (DTLB) miss rates by level (L1 and L2.)</description>
    </view>
</view_configuration>
